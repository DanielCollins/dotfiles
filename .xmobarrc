Config { font = "xft:DejaVu Sans Mono:pixelsize=12:autohint=true"
       , bgColor = "#002B36"
       , fgColor = "#93a1a1"
       , position = Top
       , lowerOnStart = True
       , hideOnStart = False
       , persistent = True
       , allDesktops = True
       , commands = [ Run Weather "YMML" ["-t","<station>: <tempC>C","-L","18","-H","25"] 36000
                    , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %YMML% | %date%  "
       }
